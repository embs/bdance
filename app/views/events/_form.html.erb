<%= nested_form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :local %><br>
    <%= f.text_field :local %>
  </div>
  <div class="field">
    <%= f.label :date %><br>
    <%= f.datetime_select :date %>
  </div>
  <div class="field">
    <%= f.label :users %><br>
    <%= f.fields_for :attendances do |b| %>
      <%= b.select :user, User.all.collect { |p| [p.email, p.id] } %><br />
      <%= b.link_to_remove "Remove this user" %><br />
    <% end %>
    <%= f.link_to_add "Add an user", :attendances %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
