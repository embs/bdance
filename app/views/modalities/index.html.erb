<h1><%= "#{t 'action.listing'} #{Modality.model_name.human.pluralize}" %></h1>

<table>
  <thead>
    <tr>
      <th><%= Modality.model_name.human %></th>
      <th><%= Modality.human_attribute_name :description %></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @modalities.each do |modality| %>
      <tr>
        <td><%= modality.name %></td>
        <td><%= modality.description %></td>
        <td><%= link_to t('action.show'), modality %></td>
        <td><%= link_to t('action.edit'), edit_modality_path(modality) %></td>
        <td><%= link_to t('action.destroy'), modality, method: :delete, data: { confirm: t('action.confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "#{t 'action.new'} #{Modality.model_name.human}", new_modality_path %>
