<h1><%= "#{t 'action.listing'} #{Pupil.model_name.human.pluralize}" %></h1>

<table class='table table-hover'>
  <thead>
    <tr>
      <th><%= Pupil.human_attribute_name :first_name %></th>
      <th><%= Pupil.human_attribute_name :last_name %></th>
      <th><%= Pupil.human_attribute_name :cpf %></th>
      <th><%= Pupil.human_attribute_name :username %></th>
      <th><%= Pupil.human_attribute_name :email %></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @pupils.each do |pupil| %>
      <tr>
        <td><%= link_to pupil.first_name, pupil %></td>
        <td><%= pupil.last_name %></td>
        <td><%= pupil.cpf %></td>
        <td><%= pupil.username %></td>
        <td><%= pupil.email %></td>
        <td>
          <%= link_to edit_pupil_path(pupil), class: 'btn' do %>
            <i class="fa fa-edit"></i> <%= t('action.edit') %>
          <% end %>
        </td>
        <td>
          <%= link_to pupil, method: :delete, data: { confirm: t('action.confirm') }, class: 'btn btn-danger' do %>
            <i class="fa fa-trash-o"></i> <%= t('action.destroy') %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "#{t 'action.new'} #{Pupil.model_name.human}", new_pupil_path, type: "button", class: "btn btn-default" %>
