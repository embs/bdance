<h1><%= "#{t 'action.listing'} #{MonthlyFee.model_name.human.pluralize}" %></h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Amount</th>
      <th>Due date</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @monthly_fees.each do |monthly_fee| %>
      <tr>
        <td><%= monthly_fee.id %></td>
        <td><%= monthly_fee.amount %></td>
        <td><%= monthly_fee.due_date %></td>
        <td><%= link_to t('action.show'), pupil_monthly_fee_path(monthly_fee.pupil, monthly_fee) %></td>
        <td><%= link_to t('action.edit'), edit_pupil_monthly_fee_path(monthly_fee.pupil, monthly_fee) %></td>
        <td><%= link_to t('action.destroy'), pupil_monthly_fee_path(monthly_fee.pupil, monthly_fee), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

