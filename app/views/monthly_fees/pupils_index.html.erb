<h1><%= "#{t 'action.listing'} #{MonthlyFee.model_name.human.pluralize}" %></h1>

<table class='table table-hover'>
  <thead>
    <tr>
      <th><%= MonthlyFee.human_attribute_name :id %></th>
      <th><%= MonthlyFee.human_attribute_name :pupil %></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @pupils.each do |pupil| %>
      <tr>
        <td><%= pupil.id %></td>
        <td><%= "#{pupil.first_name} #{pupil.last_name}" %></td>
        <td>
          <%= link_to pupil_monthly_fees_path(pupil), class: 'btn' do %>
            <i class="fa fa-eye"></i> <%= "#{t('action.show')} #{MonthlyFee.model_name.human.pluralize}" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
