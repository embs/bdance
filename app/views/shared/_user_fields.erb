<%= render 'shared/user_required_fields', f: f %>
<div class="field">
  <%= f.label :rg %><br>
  <%= f.text_field :rg %>
</div>
<div class="field">
  <%= f.label :cpf %><br>
  <%= f.text_field :cpf %>
</div>
<div class="field">
  <%= f.label :address %>
  <%= f.fields_for :address do |b| %>
    <%= b.text_field :street, placeholder: Address.human_attribute_name(:street) %>
    <%= b.text_field :number, placeholder: Address.human_attribute_name(:number) %>
    <%= b.text_field :district, placeholder: Address.human_attribute_name(:district) %>
    <%= b.text_field :city, placeholder: Address.human_attribute_name(:city) %>
    <%= b.text_field :state, placeholder: Address.human_attribute_name(:state) %>
    <%= b.text_field :zip_code, placeholder: Address.human_attribute_name(:zip_code) %>
  <% end %>
</div>
<div class="field">
  <%= f.label :phone_numbers %><br>
  <%= f.fields_for :phone_numbers do |b| %>
    <%= b.select :kind, ["Personal", "Commercial", "Residential", "Work"], placeholder: 'DDD' %>
    <%= b.text_field :ddd, placeholder: 'DDD' %>
    <%= b.text_field :number, placeholder: 'Number' %>
    <%= b.select :provider, ["", "Claro", "Oi", "TIM", "Vivo"] %><br />
    <%= b.link_to_remove "Remove this phone number" %><br />
  <% end %>
  <%= f.link_to_add :phone_numbers, model_object: PhoneNumber.new do %>
    Add Phone Number
  <% end %>
</div>
