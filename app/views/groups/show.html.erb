<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @group.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @group.description %>
</p>

<p>
  <strong>Price:</strong>
  <%= @group.price %>
</p>

<p>
  <strong>Horaries:</strong>
  <% @group.horaries.each do |horary| %>
    <%= Date::DAYNAMES[horary.day.to_i] %>, <%= horary.start.to_s(:horary_time) %> ~ <%= horary.end.to_s(:horary_time) %>
  <% end %>
</p>

<p>
  <strong>Local:</strong>
  <%= @group.local %>
</p>

<p>
  <strong>Start:</strong>
  <%= @group.start %>
</p>

<p>
  <strong>End:</strong>
  <%= @group.end %>
</p>

<p>
  <strong>Modality:</strong>
  <%= @group.modality.name %>
</p>

<%= link_to 'Edit', edit_group_path(@group) %> |
<%= link_to 'Back', groups_path %>
