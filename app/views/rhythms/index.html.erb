<h1><%= "#{t 'action.listing'} #{Rhythm.model_name.human.pluralize}" %></h1>

<table class='table table-hover'>
  <thead>
    <tr>
      <th><%= Rhythm.human_attribute_name :name %></th>
      <th><%= Rhythm.human_attribute_name :description %></th>
      <th><%= Rhythm.human_attribute_name :modality %></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @rhythms.each do |rhythm| %>
      <tr>
        <td><%= link_to rhythm.name, rhythm %></td>
        <td><%= rhythm.description %></td>
        <td><%= rhythm.modality.name %></td>
        <td>
          <%= link_to edit_rhythm_path(rhythm), class: 'btn' do %>
            <i class="fa fa-edit"></i> <%= t('action.edit') %>
          <% end %>
        </td>
        <td>
          <%= link_to rhythm, method: :delete, data: { confirm: t('action.confirm') }, class: 'btn btn-danger' do %>
            <i class="fa fa-trash-o"></i> <%= t('action.destroy') %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "#{t 'action.new'} #{Rhythm.model_name.human}", new_rhythm_path, class: 'btn' %>
